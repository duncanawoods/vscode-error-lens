{
	"typescript.tsc.autoDetect": "off",
	"search.exclude": {
		"dist/*.*": true
	},
	"eslint.validate": [
		"typescript",
	],
	"contributions.settings.moveOutPrefix": true,
	"contributions.settings.includeTypes": false,
	"contributions.settings.excludeById": [
		"errorLens.decorations",
		"errorLens.multilineMessage"
	],
	"contributions.settings.replaceDefaultValue": {
		"errorLens.disableLineComments": "\\{...\\}",
		"errorLens.lintFilePaths": "\\{...\\}",
		// VSMarketplace renders tables with scrollbars, add spaces so the table has less width
		"errorLens.severityText": "\\[\"ERROR\", \"WARNING\", \"INFO\", \"HINT\"\\]",
		"errorLens.enabledDiagnosticLevels": "\\[\"error\", \"warning\", \"info\"\\]",
		"errorLens.editorHoverPartsEnabled": "\\{\"messageEnabled\":false, \"sourceCodeEnabled\":false, \"buttonsEnabled\":false\\}",
		"errorLens.gutterEmoji": "\\{\"error\":\"üíÄ\", \"warning\":\"üòû\", \"info\":\"üÜó\", \"hint\":\"üçè\"\\}"
	},
	"contributions.settings.replaceDescription": {
		"errorLens.excludeBySource": "Specify `source` or `source(code)` pair to exclude. Examples:<br>- `eslint` disable all ESLint problems<br>- `eslint(padded-blocks)` disable `padded-blocks` rule of ESLint<br>- `Pylance` disable all Pylance linter problems<br>- `Pylance(reportUndefinedVariable)` disable `reportUndefinedVariable` rule of Pylance"
	}
}
